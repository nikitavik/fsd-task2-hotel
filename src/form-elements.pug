include ./components/form-elements/button/button
include ./components/form-elements/ghost-button/ghost-button
include ./components/form-elements/text-field/text-field
include ./components/form-elements/dropdown/dropdown
include ./components/form-elements/checkbox-buttons/checkbox-buttons
include ./components/form-elements/arrow-button/arrow-button
doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" href="main.css")
        link(href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="./node_modules/material-icons/iconfont/material-icons.css")
        title TOXIN
    body
        img.gray-logo(src="/img/icon/logo-gray.png" alt="Logo")
        .container
            .text-field-wrapper
                +textField("Text field", "email", "Email", "")
                +textField("Text field","text-field-focused", "", "This is pretty awesome")
            .dropdown-wrapper
                +dropdown("Dropdown","Сколько Гостей?", "dropdown-test", [1, 2, 3, "4"])
        .container
            .checkbox-wrapper
                +checkBox("checkbox buttons", [{name: "smoke", nameText: "Можно курить"},
                    {name: "animals", nameText: "Можно с питомцами"},
                    {name:"guests", nameText: "Можно пригласить гостей (до 10 человек)"}])
        .container
            .button-wrapper
                +btn("click me")
                +ghostBtn("click me")
            .arrow-button-wrapper
                +arrButton("перейти к оплате")
