include ../like-button/like-button

mixin commentBlock(userImg, userName, time, text)
    .comment-block
        .comment-block-header
            .comment-block-header__image
                .img.wrap
                    img(src=`/img/${userImg}.png`, alt="user")
            .comment-block-header__title
                .comment-block-header__name=userName
                .comment-block-header__time=time
        .comment-block-body
            .comment-block-body__like
                +likeBtn("action","test-comment-like", 12, true)
            .comment-block-body__text=text
